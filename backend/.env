# TravelEase Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=travelease

# JWT Configuration (Required)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration (Optional but recommended)
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=7d

# API Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Optional)
CORS_ORIGIN=http://localhost:8080

# Email Configuration (Optional - for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration (Optional)
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Logging Configuration (Optional)
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Production Database Configuration (For deployment)
# Uncomment and configure for production deployment
# DATABASE_URL=mysql://user:password@host:port/database
# DB_SSL=true

# Example Production Values:
# DB_HOST=your-production-db-host.com
# DB_USER=prod_user
# DB_PASSWORD=secure_production_password
# DB_NAME=travelease_prod
# JWT_SECRET=ultra-secure-production-jwt-secret-key-64-characters-minimum
# PORT=443
# NODE_ENV=production
# CORS_ORIGIN=https://your-frontend-domain.com